#!/usr/bin/env bash

set -euo pipefail

function get_ssm_parameter() {
  aws ssm get-parameter --name $1 --with-decryption --query Parameter.Value --output text
}

pushd apps/deploy
yarn deploy
popd

pushd apps/web
NEXT_PUBLIC_USER_POOL_REGION=$(get_ssm_parameter /test/auth-user-pool-region)
NEXT_PUBLIC_USER_POOL_ID=$(get_ssm_parameter /test/auth-user-pool-id)
NEXT_PUBLIC_USER_POOL_CLIENT_ID=$(get_ssm_parameter /test/auth-user-pool-client-id)
NEXT_PUBLIC_USER_POOL_DOMAIN=$(get_ssm_parameter /test/auth-user-pool-domain)
NEXT_PUBLIC_USER_POOL_SIGN_IN_CALLBACK_URL=$(get_ssm_parameter /test/auth-user-pool-callback-url)
NEXT_PUBLIC_USER_POOL_SIGN_OUT_CALLBACK_URL=$(get_ssm_parameter /test/auth-user-pool-callback-url)
yarn export

NEXT_STATIC_SITE_BUCKET=$(get_ssm_parameter /test/next-static-site-bucket)
aws s3 sync out s3://${NEXT_STATIC_SITE_BUCKET}
popd
